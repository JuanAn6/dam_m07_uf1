<Window x:Class="Vista.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vista"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded" 
        x:Name="mainWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <Label>EMPLEATS</Label>
            <DataGrid x:Name="dtgEmpleats" SelectedItem="{Binding ElementName=mainWindow, Path=EmpleatSelected, Mode=TwoWay }"></DataGrid>

            <Label>DEPARTAMENTS</Label>
            <DataGrid x:Name="dtgProjects" ItemsSource="{Binding ElementName=mainWindow, Path=EmpleatSelected.Projectes }"></DataGrid>
        </StackPanel>
        <Border Padding="20"  Grid.Column="1">
            <StackPanel>
                <Label>EMPLEAT</Label>
                <Label Margin="10"></Label>

                <Label>Id:</Label>
                <TextBox x:Name="txtId" IsReadOnly="True" Text="{Binding ElementName=mainWindow, Path=EmpleatSelected.Id }"></TextBox>

                <Label>Name:</Label>
                <TextBox x:Name="txtNom" Text="{Binding ElementName=mainWindow, Path=EmpleatSelected.Nom, Mode=TwoWay}"></TextBox>

                <Label>Salary:</Label>
                <TextBox x:Name="txtSalary" Text="{Binding ElementName=mainWindow, Path=EmpleatSelected.Salary, Mode=TwoWay}"></TextBox>

                <Label>Data Naix:</Label>
                <DatePicker x:Name="txtDataNaix" SelectedDate="{Binding ElementName=mainWindow, Path=EmpleatSelected.DataNaix, Mode=TwoWay}"></DatePicker>

                <Label>Departament:</Label>
                <ComboBox x:Name="cbDept" 
                  DisplayMemberPath="Nom"
                  SelectedItem="{Binding ElementName=mainWindow, Path=EmpleatSelected.Departament, Mode=TwoWay}"
                  ></ComboBox>

                <Label Margin="10"></Label>
                <Border HorizontalAlignment="Left" >
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Save" x:Name="btn_save" Width="100" Click="btn_save_Click" />
                        <Label HorizontalAlignment="Left" x:Name="label_info" Margin="20,0,0,0"></Label>
                    </StackPanel>
                </Border>
                <Label Margin="10"></Label>
                <Border HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Cancel" x:Name="btn_Cancel" Width="100" Click="btn_cancel_Click" />
                        <Label HorizontalAlignment="Left" x:Name="label_info_cancel" Margin="20,0,0,0"></Label>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </Border>
    </Grid>
</Window>
