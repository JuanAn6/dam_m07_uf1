<Page x:ConnectionId='1'
    x:Class="_20241010_InventoryManager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_20241010_InventoryManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        
    >

    <Grid ColumnSpacing="20" RowSpacing="20" Padding="20">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="/Assets/img/laboratorio.png"/>
        </Grid.Background>
        <Grid.RowDefinitions >
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!-- LISTA ITEMS -->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions >
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Text="Items" FontSize="20"></TextBlock>

            <ListView x:ConnectionId='29' 
                Grid.Row="1"
                x:Name="lsvItems" 
                ScrollViewer.VerticalScrollBarVisibility="Auto" 
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.HorizontalScrollMode="Disabled"                  
                ScrollViewer.VerticalScrollMode="Auto"
                ItemsSource="{Binding Collection}"
                                                            
                >

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions >
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="9*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Name}" Grid.Column="0" Grid.Row="0"></TextBlock>
                            <TextBlock Text="{Binding Desc}" Grid.Column="1" Grid.Row="0"></TextBlock>

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- LISTA RECIPS -->
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Text="Recips" FontSize="20"></TextBlock>

            <ListView x:ConnectionId='27' 
                Grid.Row="1"
                x:Name="lsvRecips"
                ScrollViewer.VerticalScrollBarVisibility="Auto" 
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.HorizontalScrollMode="Disabled"
                ScrollViewer.VerticalScrollMode="Auto"
                ItemsSource="{Binding Collection}"
                                                             
                >

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                <ColumnDefinition Width="6*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Name}"></TextBlock>
                            <TextBlock Grid.Column="1" Text="Item result->" HorizontalAlignment="Right"></TextBlock>
                            <TextBlock Grid.Column="2" Text="{Binding Result.Name}"></TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- LISTA ITEMS-RECIPE -->
        <Grid Grid.Row="0" Grid.Column="2">
            <Grid.RowDefinitions >
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Text="Items recipe" FontSize="20"></TextBlock>

            <ListView x:ConnectionId='25' 
                Grid.Row="1"
                x:Name="lsvItemsRecips" 
                ScrollViewer.VerticalScrollBarVisibility="Auto" 
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.HorizontalScrollMode="Disabled"
                ScrollViewer.VerticalScrollMode="Auto"
                ItemsSource="{Binding Collection}"
                >

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions >
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Key.Name}" Grid.Column="0" Grid.Row="1"></TextBlock>
                            <TextBlock Text="{Binding Value}" TextAlignment="Center" Grid.Column="1" Grid.Row="1"></TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- FORMULARIO ITEMS -->
        <Grid  Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions >
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Edit / New Item" FontSize="20"></TextBlock>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Name: "></TextBlock>
            <TextBox x:ConnectionId='19' x:Name="itemName" Grid.Row="1" Grid.Column="1" ></TextBox>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Image url: "></TextBlock>
            <TextBox x:ConnectionId='20' x:Name="itemUrl" Grid.Row="2" Grid.Column="1" ></TextBox>

            <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
                <TextBlock Text="Description"></TextBlock>
                <TextBox x:ConnectionId='24' x:Name="itemDesc" TextWrapping="Wrap" ></TextBox>
            </StackPanel>

            <Button x:ConnectionId='21' Content="Add" Grid.Row="4" Grid.Column="0" Background="CornflowerBlue"                              ></Button>
            <Button x:ConnectionId='22' Content="Save" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" Background="CornflowerBlue"                               ></Button>
            <Button x:ConnectionId='23' Content="Delete" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right" Background="CornflowerBlue"                                 ></Button>

        </Grid>

        <!-- FROMULARIO RECIPS -->
        <Grid  Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions >
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Text="Add recipe" FontSize="20"></TextBlock>

            <StackPanel Grid.Row="1" >
                <TextBlock Text="Name: "></TextBlock>
                <TextBox x:ConnectionId='17' x:Name="recipeName" TextWrapping="Wrap" ></TextBox>
                <TextBlock  Grid.Row="1" Grid.Column="0" Text="Item: "></TextBlock>
                <ComboBox x:ConnectionId='18' Grid.Row="1" Grid.Column="1" x:Name="rpCbItems" ></ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="2" >

            </StackPanel>

            <Button x:ConnectionId='15' Content="Add" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Background="CornflowerBlue"                                 ></Button>
            <Button x:ConnectionId='16' Content="Delete" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" Background="CornflowerBlue"                                    ></Button>

        </Grid>

        <!-- FORMULARIO ITEMS-RECIPE-->
        <Grid  Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions >
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"  Text="Add item recipe" FontSize="20"></TextBlock>

            <TextBlock  Grid.Row="1" Grid.Column="0" Text="Item: "></TextBlock>
            <ComboBox x:ConnectionId='11' Grid.Row="1" Grid.Column="1" x:Name="cbItems" ></ComboBox>

            <TextBlock  Grid.Row="2" Grid.Column="0" Text="Quatity: "></TextBlock>
            <ComboBox x:ConnectionId='12' Grid.Row="2" Grid.Column="1" x:Name="cbQt" ></ComboBox>

            <Button x:ConnectionId='13' Content="Add" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" Background="CornflowerBlue"                                     ></Button>
            <Button x:ConnectionId='14' Content="Delete" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Left" Background="CornflowerBlue"                                        ></Button>

        </Grid>

        <!-- INVENTARY -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="1">
            <GridView x:ConnectionId='9' x:Name="Inventory" HorizontalAlignment="Center" VerticalAlignment="Center" SelectionMode="Multiple">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="50" Height="50">
                            <Grid.Background>
                                <ImageBrush Stretch="Fill" ImageSource="/Assets/img/InventoryCell.png" />
                            </Grid.Background>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Text="{Binding QuantityXAML}" FontSize="10" HorizontalAlignment="Left" Padding="9"/>
                            <TextBlock Grid.Row="1" Text="{Binding Item.Name}" FontSize="12" HorizontalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>

        <!-- FORMULARIO COMBINE ITEMS-->
        <Grid  Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions >
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button x:ConnectionId='5' 
                Content="Delete" 
                Grid.Row="0" 
                Foreground="Black"
                Background="CornflowerBlue"
                                                          
                ></Button>
            <Button x:ConnectionId='6' 
                Content="Combine" 
                Grid.Row="1"  
                Foreground="Black"
                Background="CornflowerBlue" 
                                                  
                ></Button>

            <ListView x:ConnectionId='7' 
                Grid.Column="1"
                Grid.Row="0"
                Grid.RowSpan="2"
                x:Name="lsvRecipsCombine"
                ScrollViewer.VerticalScrollBarVisibility="Auto" 
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.HorizontalScrollMode="Disabled"
                ScrollViewer.VerticalScrollMode="Auto"
                ItemsSource="{Binding Collection}"
                                                                    
                >

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                <ColumnDefinition Width="6*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Name}"></TextBlock>
                            <TextBlock Grid.Column="1" Text="Item result->" HorizontalAlignment="Right"></TextBlock>
                            <TextBlock Grid.Column="2" Text="{Binding Result.Name}"></TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- FORMULARIO ADD ITEMS INVENTORY-->
        <Grid  Grid.Row="2" Grid.Column="2">
            <Grid.RowDefinitions >
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"  Text="Add item inventory" FontSize="20"></TextBlock>

            <TextBlock  Grid.Row="1" Grid.Column="0" Text="Item: "></TextBlock>
            <ComboBox x:ConnectionId='2' Grid.Row="1" Grid.Column="1" x:Name="inCbItems" ></ComboBox>

            <TextBlock  Grid.Row="2" Grid.Column="0" Text="Quatity: "></TextBlock>
            <ComboBox x:ConnectionId='3' Grid.Row="2" Grid.Column="1" x:Name="inCbQt" ></ComboBox>

            <Button x:ConnectionId='4' 
                Content="Add" 
                Grid.Row="3" 
                Grid.ColumnSpan="2" 
                Foreground="Black"
                Background="CornflowerBlue" 
                                                       
                ></Button>

        </Grid>

    </Grid>
</Page>

