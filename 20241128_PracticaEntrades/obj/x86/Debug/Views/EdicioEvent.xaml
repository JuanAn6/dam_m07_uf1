<Page x:ConnectionId='1'
    x:Class="_20241128_PracticaEntrades.Views.EdicioEvent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_20241128_PracticaEntrades.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls" xmlns:wctprimitives="using:Microsoft.Toolkit.Uwp.UI.Controls.Primitives"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <Grid ColumnSpacing="10" RowSpacing="10" Padding="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Text="Edició de Events" FontSize="30" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" ></TextBlock>

        <Grid ColumnSpacing="10" RowSpacing="10" Padding="10" Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock Text ="Data: " Grid.Column="0" Grid.Row="0"></TextBlock>
            <DatePicker x:ConnectionId='10' x:Name="dp_date" Grid.Column="1" Grid.Row="0"></DatePicker>

            <TextBlock Text ="Nom: " Grid.Column="0" Grid.Row="1"></TextBlock>
            <TextBox x:ConnectionId='11' x:Name="tb_name" Grid.Column="1" Grid.Row="1"></TextBox>

            <TextBlock Text ="Protagonista: " Grid.Column="0" Grid.Row="2"></TextBlock>
            <TextBox x:ConnectionId='12' x:Name="tb_main_character" Grid.Column="1" Grid.Row="2"></TextBox>

            <TextBlock Text ="Sala: " Grid.Column="0" Grid.Row="3"></TextBlock>
            <AutoSuggestBox x:ConnectionId='13' x:Name="asb_sala" Grid.Column="1" Grid.Row="3"></AutoSuggestBox>

            <TextBlock Text ="Categoria: " Grid.Column="0" Grid.Row="4"></TextBlock>
            <ComboBox x:ConnectionId='14' x:Name="cb_categoria" Grid.Column="1" Grid.Row="4"></ComboBox>

            <Image x:ConnectionId='15' x:Name="img" Grid.Column="2" Grid.RowSpan="5" Source="https://picsum.photos/300/300?"></Image>
            
        </Grid>

        <Grid ColumnSpacing="10" RowSpacing="10" Padding="10" Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

            <controls:DataGrid x:ConnectionId='2'
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="5"
                Grid.RowSpan="2"
                x:Name="dgSales" 
                GridLinesVisibility="All"
                AlternatingRowBackground="#444444"
                HeadersVisibility="Column"
                AutoGenerateColumns="False"
                ItemsSource="{Binding Path=Sales}"
            >       
                <controls:DataGrid.ColumnHeaderStyle>
                    <Style TargetType="wctprimitives:DataGridColumnHeader">
                        <Setter Property="FontWeight">
                            <Setter.Value>Bold</Setter.Value>
                        </Setter>
                        <Setter Property="FontSize" Value="20"></Setter>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="wctprimitives:DataGridColumnHeader">
                                    <ContentPresenter Background="#999999" />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </controls:DataGrid.ColumnHeaderStyle>

                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn Binding="{Binding Id}" Header="Id" />
                    <controls:DataGridTextColumn Binding="{Binding Nom}" Header="Nom" />
                    <controls:DataGridTextColumn Binding="{Binding Adreca}" Header="Adreça" />
                    <controls:DataGridTextColumn Binding="{Binding Municipi}" Header="Municipi" />
                </controls:DataGrid.Columns>

            </controls:DataGrid>

            <Button Width="50" Height="50" Grid.Column="5" Grid.Row="0" HorizontalAlignment="Right" >
                <FontIcon Glyph="&#59213;"/>
            </Button>
            
            <Button Width="50" Height="50" Grid.Column="5" Grid.Row="1" HorizontalAlignment="Right" >
                <FontIcon Glyph="&#59152;"/>
            </Button>

            <TextBlock Text ="Nom: " Grid.Column="0" Grid.Row="2"></TextBlock>
            <TextBox x:ConnectionId='3' x:Name="tb_nom_tarifa" Grid.Column="1" Grid.Row="2"></TextBox>
            
            <TextBlock Text ="Preu: " Grid.Column="2" Grid.Row="2"></TextBlock>
            <TextBox x:ConnectionId='4' x:Name="tb_preu_tarifa" Grid.Column="3" Grid.Row="2"></TextBox>

            <TextBlock Text ="Zona sala (opcional): " Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="2"></TextBlock>

            <TextBlock Text ="Desc: " Grid.Column="0" Grid.Row="3"></TextBlock>
            <TextBox x:ConnectionId='5' x:Name="tb_desc_tarifa" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="3"></TextBox>


            <ListView x:ConnectionId='6' x:Name="tb_llista_zonas" Grid.Column="4" Grid.Row="3" Grid.ColumnSpan="2" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Auto" >

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Nom}"></TextBlock>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>

        <Button Content="Cancel" Grid.Column="0" Grid.Row="2"></Button>
        <Button Content="Save" Grid.Column="1" Grid.Row="2"></Button>
    </Grid>
</Page>

