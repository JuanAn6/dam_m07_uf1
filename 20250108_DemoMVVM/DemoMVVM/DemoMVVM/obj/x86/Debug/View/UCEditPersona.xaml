<UserControl x:ConnectionId='1'
    x:Class="DemoMVVM.View.UCEditPersona"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DemoMVVM.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:transformers="using:DemoMVVM.View.Transformers"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    x:Name="root">

    <UserControl.Resources>
        <transformers:SexeRadioTransform x:Key="sexeRadioTransform"></transformers:SexeRadioTransform>
    </UserControl.Resources>

    <Grid ColumnSpacing="5" RowSpacing="5" Padding="20" Visibility="{Binding ElementName=root, Path=PersonaEnEdicio.FormVisibility, FallbackValue=Collapsed }">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>


        <TextBlock Text="Nom:" Grid.Column="0" Grid.Row="0"/>
        <TextBox Text="{Binding ElementName=root, Path=PersonaEnEdicio.Nom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }"
                 BorderBrush="{Binding ElementName=root, Path=PersonaEnEdicio.NameBorderBrush, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }"
                 Grid.Column="1" Grid.Row="0" />

        <TextBlock Text="Edat:" Grid.Column="0" Grid.Row="1"/>
        <TextBox Text="{Binding ElementName=root, Path=PersonaEnEdicio.Edat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" 
                 BorderBrush="{Binding ElementName=root, Path=PersonaEnEdicio.EdatBackground, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 Grid.Column="1" Grid.Row="1" />
        <TextBlock Text="{Binding ElementName=root, Path=PersonaEnEdicio.EdatError, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" 
                   Foreground="Red" Grid.Column="2" Grid.Row="1" />

        <TextBlock Text="Actiu:" Grid.Column="0" Grid.Row="2"/>
        <CheckBox IsChecked="{Binding ElementName=root, Path=PersonaEnEdicio.Actiu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" Grid.Column="1" Grid.Row="2" />

        <TextBlock Text="Sexe:" Grid.Column="0" Grid.Row="3" />
        <ComboBox 
            SelectedItem="{Binding ElementName=root, Path=PersonaEnEdicio.Sexe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
            ItemsSource="{Binding ElementName=root, Path=PersonaEnEdicio.ListSexe}" 
            Grid.Column="1" Grid.Row="3"></ComboBox>

        <TextBlock Text="Sexe:" Grid.Column="0" Grid.Row="4" />
        <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal">
            <RadioButton IsChecked="{Binding ElementName=root, Path=PersonaEnEdicio.Sexe, Converter={StaticResource sexeRadioTransform}, ConverterParameter=0, Mode=TwoWay}">Done</RadioButton>
            <RadioButton IsChecked="{Binding ElementName=root, Path=PersonaEnEdicio.Sexe, Converter={StaticResource sexeRadioTransform}, ConverterParameter=1, Mode=TwoWay}">Home</RadioButton>
            <RadioButton IsChecked="{Binding ElementName=root, Path=PersonaEnEdicio.Sexe, Converter={StaticResource sexeRadioTransform}, ConverterParameter=2, Mode=TwoWay}">No definit</RadioButton>
        </StackPanel>

        <TextBlock Text="Image:" Grid.Column="0" Grid.Row="5" />
        <Image Source="{Binding ElementName=root, Path=PersonaEnEdicio.ImageURL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" Grid.Column="1" Grid.Row="5"/>


        <Button x:ConnectionId='2' Grid.Column="0" Grid.Row="6"                                        Content="Save" 
                IsEnabled="{Binding ElementName=root, Path=PersonaEnEdicio.EsValida, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }"></Button>

        <Button x:ConnectionId='3' Grid.Column="1" Grid.Row="6"                                          
                Visibility="{Binding ElementName=root, Path=PersonaEnEdicio.CanvelVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, FallbackValue=Collapsed }" 
                Content="Cancel"></Button>
        

    </Grid>
</UserControl>

